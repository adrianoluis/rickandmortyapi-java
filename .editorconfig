root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.xml]
indent_style = tab
indent_size = 4

[*.java]
indent_style = tab
indent_size = 4
continuation_indent_size = 8

[*.bat]
indent_style = tab
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[LICENSE]
insert_final_newline = false
